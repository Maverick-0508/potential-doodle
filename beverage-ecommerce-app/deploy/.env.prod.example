# Production Environment Configuration
# Copy this file to .env.prod and fill in your actual production values

# GitHub Container Registry (for Docker images)
GITHUB_REPOSITORY=maverick-0508/potential-doodle

# Application URLs
FRONTEND_URL=https://your-domain.com
BACKEND_URL=https://your-domain.com

# Database Configuration
MONGO_URI=mongodb://mongodb:27017/beverage_ecommerce
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=secure_password_here

# Redis Configuration
REDIS_URL=redis://:redis_password@redis:6379
REDIS_PASSWORD=secure_redis_password_here

# JWT Configuration
JWT_SECRET=your-production-jwt-secret-key-should-be-very-secure-and-32-chars-long

# M-Pesa Production Configuration
MPESA_CONSUMER_KEY=your_production_mpesa_consumer_key
MPESA_CONSUMER_SECRET=your_production_mpesa_consumer_secret
MPESA_SHORTCODE=your_production_shortcode
MPESA_PASSKEY=your_production_mpesa_passkey
MPESA_CALLBACK_URL=https://your-domain.com/api/wallet/mpesa/callback

# Session Configuration
SESSION_SECRET=your-production-session-secret-key-should-be-random-and-secure

# Email Configuration (for production notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=noreply@your-domain.com
EMAIL_PASS=your_app_password

# Monitoring & Logging
LOG_LEVEL=info
ENABLE_METRICS=true

# SSL Configuration (if using custom certificates)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem